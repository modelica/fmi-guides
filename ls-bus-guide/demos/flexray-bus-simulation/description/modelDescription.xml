        mimeType="application/org.fmi-standard.fmi-ls-bus.flexray; version=&quot;1.1.0-alpha.1&quot;">
    </Binary>

    <Clock name="FlexRayChannel.Node1.Rx_Clock" valueReference="2" causality="input" intervalVariability="triggered" />
    <Clock name="FlexRayChannel.Node1.Tx_Clock" valueReference="3" causality="input" intervalVariability="countdown" />
    
    <Boolean name="FlexRayChannel.Node1.BusNotifications" valueReference="10" causality="output" variability="constant" initial="exact">
      <Start value="true" />
