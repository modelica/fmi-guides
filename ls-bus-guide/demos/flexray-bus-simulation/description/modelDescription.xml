            valueReference="5"
            causality="output"
            variability="discrete"
            initial="calculated"
            maxSize="2048"
            clocks="7"
            mimeType="application/org.fmi-standard.fmi-ls-bus.flexray; version=&quot;1.1.0-alpha.1&quot;">
